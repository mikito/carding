<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<title><%= @model["title"] %></title>
</head>
<body>

<section class="sheet">
  <h1><%= @model["title"] %></h1>
  <img src='<%= @model["image"] %>' />
  <div class="ingredients">
    <ul>
    <%- @model["ingredients"].each do |item| -%>
      <li><%= item["name"] %> : <%= item["quantity"] %></li>
    <%- end -%>
    </ul>
  </div>
</section>
</body>
</html>
