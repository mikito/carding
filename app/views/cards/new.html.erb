
<p class="lead">
<%= form_tag("/cards", method: "get", html: {class: "form-horizontal"}) do %>


  <div class="row">

  <div class="form-group col-xs-10">

  <div class="form-group">
  <%= label_tag :url, "URL" %>
  <%= text_field_tag(:url, '', placeholder: "https://cookpad.com/recipe/2069863", class: 'form-control') %>
  </div>
  </div>

  <div class="form-group col-xs-2">
    <%= label_tag :max_step, "STEP" %>
    <%= text_field_tag(:max_step, '', placeholder: "8", size: 2, class: 'form-control') %>
  </div>

  </div>

  <%= submit_tag("Go", class: 'btn btn-lg btn-secondary') %>

<% end %>
</p>

