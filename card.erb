<html>
  <head>
    <title> <%= model["title"] %></title>
  </head>


  <body>
    <h1><%= model["title"] %></h1>

    <img src='<%= model["image"] %>' />

    <div id="ingredients">
      <%- model["ingredients"].each do |item| -%>
        <div class="ingredient_name"> 
          <%= item["name"] %>
        </div>
        <div class="ingredient_amount"> 
          <%= item["quantity"] %>
        </div>
      <%- end -%>
    </div>
  </body>
</html>
